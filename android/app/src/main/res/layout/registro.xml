<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewLogoRegistro"
        android:layout_width="244dp"
        android:layout_height="178dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/logotipo_hypnos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSubtituloRegistro"
        style="@style/TextoInterBold.Subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="175dp" />

    <EditText
        android:id="@+id/edtEmailRegistro"
        style="@style/Inputs"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:hint="Email"
        android:textColorHint="@color/colorAzulClaro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoRegistro" />

    <!-- Campo de Nombre y Apellidos -->
    <EditText
        android:id="@+id/edtNombreApellidos"
        style="@style/Inputs"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Nombre y apellidos"
        android:textColorHint="@color/colorAzulClaro"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailRegistro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Campo de Fecha de Nacimiento -->
    <EditText
        android:id="@+id/edtFechaNacimiento"
        style="@style/Inputs"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Fecha de nacimiento"
        android:textColorHint="@color/colorAzulClaro"
        app:layout_constraintTop_toBottomOf="@+id/edtNombreApellidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Campo de Contraseña -->
    <EditText
        android:id="@+id/edtContraseñaRegistro"
        style="@style/Inputs"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Crea una contraseña"
        android:textColorHint="@color/colorAzulClaro"
        app:layout_constraintTop_toBottomOf="@+id/edtFechaNacimiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Campo para Repetir la Contraseña -->
    <EditText
        android:id="@+id/edtRepetirContraseña"
        style="@style/Inputs"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Repita la contraseña"
        android:textColorHint="@color/colorAzulClaro"
        app:layout_constraintTop_toBottomOf="@+id/edtContraseñaRegistro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Botón de Registro -->

    <Button
        android:id="@+id/btnRegistro"
        style="@style/EstiloBoton"
        android:layout_width="296dp"
        android:layout_height="51dp"
        android:layout_marginTop="68dp"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtRepetirContraseña" />

    <TextView
        android:id="@+id/txt"
        style="@style/TextoInterRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes una cuenta?"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/txtRegistrate"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="774dp" />

    <TextView
        android:id="@+id/txtRegistrate"
        style="@style/TextoInterBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:text="Regístrate"
        android:textColor="@color/colorAzulPrincipal"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt"
        app:layout_constraintTop_toTopOf="@+id/txt"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
